<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/main"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_weight="10"
	android:background="#fff"
	android:orientation="vertical">
    <include
        layout="@layout/toolbar" />
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:layout_weight="3"
		android:gravity="center"
		android:orientation="vertical">

		<ImageView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_gravity="center"
			android:paddingLeft="16dp"
			android:paddingRight="16dp"
			android:src="@drawable/fill_14_copy_2"
			android:layout_marginTop="@dimen/size_frtyfr_normal"
			android:scaleType="fitCenter"
			android:layout_marginLeft="@dimen/size_frtyfr_normal"
			android:layout_marginRight="@dimen/size_frtyfr_normal" />
	</LinearLayout>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:layout_gravity="center"
		android:layout_weight="1.4"
		android:fontFamily="sans-serif"
		android:gravity="center"
		android:paddingLeft="32dp"
		android:paddingRight="32dp"
		android:textColor="#3e4a59"
		android:textSize="@dimen/sell_size_twntyfour_sp"
		android:text="Selamat Datang!" />
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:layout_gravity="center"
		android:layout_weight="1"
		android:gravity="center|top"
		android:paddingLeft="30dp"
		android:paddingRight="30dp"
		android:text="Go-walls merupakan sistem automasi pabrik es-krim walls di Indonesia"
		android:textColor="#3e4a59"
		android:textSize="@dimen/sell_size_thteen_sp_normal" />
	<TextView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="0.85"
		android:gravity="center"
		android:textSize="@dimen/sell_size_thteen_sp_normal"
		android:textColor="#ffffff"
		android:text="MASUK"
		android:orientation="vertical"
		android:background="@drawable/border_radius_9dp_pink"
		android:layout_marginLeft="@dimen/sell_size_thrtytw_normal"
		android:layout_marginRight="@dimen/sell_size_thrtytw_normal"
		android:id="@+id/masuk" />
	<TextView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="0.85"
		android:background="@drawable/border_radius_9dp_grey"
		android:gravity="center"
		android:text="DAFTAR"
		android:textSize="@dimen/sell_size_thteen_sp_normal"
		android:textColor="#ffffff"
		android:orientation="vertical"
		android:layout_marginLeft="@dimen/sell_size_thrtytw_normal"
		android:layout_marginRight="@dimen/sell_size_thrtytw_normal"
		android:layout_marginTop="@dimen/sell_size_twelve_normal"
		android:id="@+id/daftar" />
	<TextView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1.2"
		android:textSize="@dimen/ecommerce_sell_size_ten_sp_normal"
		android:textColor="#4a4a4a"
		android:text="Dengan masuk atau mendaftar, kamu menyetujui Ketentuan Layanan dan Kebijakan Privasi"
		android:gravity="left"
		android:paddingLeft="@dimen/sell_size_thrtfv_normal"
		android:paddingTop="@dimen/sell_size_svteen_normal"
		android:paddingRight="@dimen/sell_size_thrtfv_normal" 
        />
</LinearLayout>